{% set companyLogo  = config("Ceres.header.company_logo") %}
{% set showHeaderNavBar = config("Ceres.header.show_navbars") %}
{% set companyName  = trans("Ceres::Template.headerCompanyName") %}
{% set useMegaMenu  = config("Ceres.header.megamenu_levels") > 1 %}
{% set homepageURL = services.url.getHomepageURL() %}

<nav class="navbar header-fw p-0 {% if useMegaMenu %} megamenu{% else %} normalmenu{% endif %}">
    <div class="container-max d-block">
        <div class="row mx-0 position-relative d-flex py-2">
            <div class="d-none d-sm-none d-md-none d-lg-block d-xl-block">
                <item-search></item-search>
            </div>
            <div class="brand-wrapper">
                <a class="navbar-brand py-2 mx-0" href="{{ homepageURL }}">
                    {% if ('http' in companyLogo) or ('layout/' in companyLogo) %}
                        <img alt="{{ companyName }}" src="{{ companyLogo }}" class="img-fluid w-100"/>
                    {% else %}
                        <img alt="{{ companyName }}" src="{{ plugin_path('Ceres') }}/{{ companyLogo }}"
                             class="img-fluid w-100"/>
                    {% endif %}
                </a>
            </div>


            {% include "devMlt::PageDesign.Partials.Header.NavMenus.MobilenNavTemp" %}

            <button class="search-toggler d-lg-none" type="button" data-toggle="collapse" data-target="#searchMobile"
                    aria-expanded="false" aria-controls="searchMobile">
                <div class="position-relative">
                    <div class="icon"></div>
                </div>
            </button>
            {% if services.authentication.isLoggedIn() %}
