                            </div>
                            {% set userObject = services.customer.getContact() %}
                            <div class="d-block ml-3 text-left{% if userObject.id|length == 0 %} py-1{% endif %}">
                                <div class="name">
                                    Hallo, {% if userObject.firstName|length > 0 and userObject.firstName|length < 13 %}{{ userObject.firstName }}{% else %}wie gehts?{% endif %}{% if userObject.id|length > 0 %}</div>
                                <small class="text-muted">Kundennummer: {{ userObject.id }}</small>{% endif %}</div>
                        </div>
                        {% if services.template.isCurrentTemplate('tpl.my-account') %}
                            <hr class="mt-2 mb-1">
                        {% else %}
                            <a href="/my-account" class="btn btn-primary btn-block btn-sm">Mein Konto</a>
                        {% endif %}
                        <a href="/my-account" v-logout class="btn btn-link btn-block btn-sm text-muted">Ausloggen</a>
                    </div>
                </button>
                <script2>
                    $(document).ready(function() {
                    $('#account-toggler').click(function() {
                    $('.login-box').toggleClass('login-box-show');
                    });
                    });
                </script2>
            {% else %}
                <button data-target="#login" data-toggle="modal"
                        class="account-toggler list-inline-item d-none d-sm-none d-md-none d-lg-block d-xl-block"
                        type="button">
                    <div class="position-relative">
                        <div class="icon at"></div>
                        <span class="d-none">{{ trans("devMlt::Template.ActionIcon1") }}</span>
                    </div>
                </button>
            {% endif %}


            <button class="wishlist-toggler list-inline-item" type="button"
                    onclick="window.location.href = '{{ homepageURL }}wish-list';">
                <div class="position-relative">
                    <div class="icon"></div>
                    <wish-list-count>
                        <div class="count">0</div>
                    </wish-list-count>
                    <span class="d-none">{{ trans("devMlt::Template.ActionIcon2") }}</span>
                </div>
            </button>
            <button v-toggle-basket-preview class="cart-toggler list-inline-item control-basket"
                    @mouseover.once="$store.dispatch('loadComponent', 'basket-preview')">
                <div class="positon-relative">
                    <div class="icon"></div>
                    {% if config("Ceres.header.basket_values") != "sum" %}
                        <div class="count" v-basket-item-quantity="$store.state.basket.data.itemQuantity">0</div>
                    {% endif %}

                    {% if config("Ceres.header.basket_values") != "quantity" %}
                        <div class="badge p-0 ml-2" v-if="!$store.state.basket.showNetPrices"
                             v-basket-item-sum="$store.state.basket.data.itemSum">
                            0,00 {{ services.checkout.getCurrencyData()[currencyFormat] }}</div>
                        <div class="badge p-0 ml-2" v-else v-cloak
                             v-basket-item-sum="$store.state.basket.data.itemSumNet">
                            0,00 {{ services.checkout.getCurrencyData()[currencyFormat] }}</div>
                    {% endif %}
                    <span class="d-none">{{ trans("devMlt::Template.ActionIcon3") }}</span>
                </div>
            </button>
        </div>
    </div>
    <div class="container-max d-block main-navbar-collapsable main-navigation d-none d-lg-block">
{#         {% include "devMlt::PageDesign.Partials.Header.NavigationList" %}#}
        {% include "devMlt::PageDesign.Partials.Header.TempNav" %}
    </div>
</nav>
<lazy-load component="basket-preview">
    <basket-preview :show-net-prices="{{ showNetPrices | json_encode }}">
        <template #before-basket-item>
            {{ LayoutContainer.show("Ceres::BasketList.BeforeItem") }}
        </template>
        <template #after-basket-item>
            {{ LayoutContainer.show("Ceres::BasketList.AfterItem") }}
        </template>
        <template #before-basket-totals>
            {{ LayoutContainer.show("Ceres::BasketPreview.BeforeBasketTotals") }}
        </template>
        <template #before-item-sum>
            {{ LayoutContainer.show("Ceres::BasketTotals.BeforeItemSum") }}
        </template>
        <template #after-item-sum>
            {{ LayoutContainer.show("Ceres::BasketTotals.AfterItemSum") }}
        </template>
        <template #before-shipping-costs>
            {{ LayoutContainer.show("Ceres::BasketTotals.BeforeShippingCosts") }}
        </template>
        <template #after-shipping-costs>
            {{ LayoutContainer.show("Ceres::BasketTotals.AfterShippingCosts") }}
        </template>
        <template #before-total-sum>
            {{ LayoutContainer.show("Ceres::BasketTotals.BeforeTotalSum") }}
        </template>
        <template #before-vat>
            {{ LayoutContainer.show("Ceres::BasketTotals.BeforeVat") }}
        </template>
        <template #after-vat>
            {{ LayoutContainer.show("Ceres::BasketTotals.AfterVat") }}
        </template>
        <template #after-total-sum>
            {{ LayoutContainer.show("Ceres::BasketTotals.AfterTotalSum") }}
        </template>
        <template #after-basket-totals>
            {{ LayoutContainer.show("Ceres::BasketPreview.AfterBasketTotals") }}
        </template>
        <template #before-checkout-button>
            {{ LayoutContainer.show("Ceres::BasketPreview.BeforeCheckoutButton") }}
        </template>
        <template #after-checkout-button>
            {{ LayoutContainer.show("Ceres::BasketPreview.AfterCheckoutButton") }}
        </template>
    </basket-preview>
</lazy-load>
<div class="collapse w-100" id="searchMobile">
    <div class="d-flex px-3 py-2">
        <item-search></item-search>
        <button v-open-mobile-navigation class="navigation-toggler d-lg-none" type="button">
            <div class="position-relative">
                <div class="icon"></div>
            </div>
        </button>
    </div>
</div>