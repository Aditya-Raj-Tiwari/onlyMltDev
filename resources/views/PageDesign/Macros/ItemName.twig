{% macro get( itemName, bundleType ) %}
    {% spaceless %}
    {% if bundleType == "bundle" %}
        {% if "[BUNDLE]" in itemName %}
            {% set itemName = itemName | replace({"[BUNDLE]": ""}) | trim %}
        {% endif %}
        
        {{ trans("Ceres::Template.itemBundleName", {"itemName": itemName}) }}
    {% elseif bundleType == "bundle_item" %}
        {% if "[-]" in itemName %}
            {% set itemName = itemName | replace({"[-]": ""}) | trim %}
        {% endif %}

        {{ itemName }}
    {% else %}
        {{ itemName }}
    {% endif %}
    {% endspaceless %}
{% endmacro %}